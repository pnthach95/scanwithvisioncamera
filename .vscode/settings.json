{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.rulers": [
    80
  ],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "START:",
    "END:"
  ],
  "todo-tree.general.tagGroups": {
    "PROJECT": [
      "START:",
      "END:"
    ]
  },
  "todo-tree.highlights.customHighlight": {
    "PROJECT": {
      "background": "#00ffff",
      "type": "text-and-comment",
      "hideFromTree": true
    },
    "TODO": {
      "icon": "check",
      "type": "line",
      "background": "#008000"
    },
    "FIXME": {
      "icon": "tools",
      "background": "#ffff00",
      "iconColour": "#ffff00"
    }
  },
  "todo-tree.highlights.defaultHighlight": {
    "icon": "dash",
    "type": "text",
    "opacity": 50,
    "foreground": "#fff",
    "background": "#0000ff",
    "iconColour": "#008000"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "taskExplorer.exclude": [
    "**/.vscode-test/**",
    "**/bin/**",
    "**/build/**",
    "**/CompiledOutput/**",
    "**/dist/**",
    "**/doc/**",
    "**/ext/**",
    "**/out/**",
    "**/output/**",
    "**/packages/**",
    "**/release/**",
    "**/releases/**",
    "**/samples/**",
    "**/sdks/**",
    "**/static/**",
    "**/target/**",
    "**/test/**",
    "**/third_party/**",
    "**/vendor/**",
    "**/android/**",
    "**/ios/Pods/**",
    "**/.husky/**"
  ]
}
